append scripts

  if reload
    //- If live-reload is active
    script(type="text/javascript", src='/socket.io/socket.io.js')
    script(type="text/javascript", src='/javascripts/reload-client.js')

  if optimize
    //- If it's an optimized build, use the bundled scripts
    script(type="text/javascript", src='/javascripts/'+device+'-built.js')
  else
    //- Else, use RequireJS and specify the main app
    script(type="text/javascript", src='/javascripts/vendor/requirejs/require.js', data-main='/javascripts/'+device+'.js')
